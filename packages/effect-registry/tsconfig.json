{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": false,
		"jsx": "react-jsx",
		"lib": ["ES2020", "DOM"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"downlevelIteration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
