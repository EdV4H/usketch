{
	"extends": "@usketch/tsconfig/lib",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"paths": {
			"@usketch/shared-types": ["../shared-types/dist"],
			"@usketch/relationship-graph": ["../relationship-graph/dist"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/__tests__/**/*"]
}
