{
	"extends": "@usketch/tsconfig/lib",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"verbatimModuleSyntax": false,
		"exactOptionalPropertyTypes": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "build", "node_modules"]
}
